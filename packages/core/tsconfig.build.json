{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx"
  ]
}
