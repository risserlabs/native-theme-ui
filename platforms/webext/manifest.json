{
  "manifest_version": 2,
  "name": "multiplatform-framework",
  "version": "0.0.1",
  "description": "write once, render anywhere",
  "author": "Risser Labs LLC",
  "developer": {
    "name": "Risser Labs LLC",
    "url": "https://bitspur.com"
  },
  "devtools_page": "out/devtools.html",
  "permissions": [],
  "web_accessible_resources": [],
  "browser_specific_settings": {
    "gecko": {
      "id": "multiplatform-framework@bitspur.com"
    }
  },
  "icons": {
    "48": "border-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": false
  }
}
