{
  "name": "@multiverse/webext",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "next lint",
    "start": "next start",
    "webext:build": "rm -rf dist && next export && webpack && cd dist/out && rm -rf _next && (grep -rl '/_next' * | xargs sed -i 's|/_next|/next|g')",
    "webext:dev": "cd dist && web-ext run --verbose --browser-console"
  },
  "dependencies": {
    "-": "*",
    "@babel/runtime": "^7.16.3",
    "@dripsy/core": "^3.5.3",
    "core-js": "^3.19.1",
    "dripsy": "^3.5.3",
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.64.3",
    "react-native-web": "^0.17.5",
    "theme-ui": "^0.12.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/plugin-proposal-optional-chaining": "^7.16.0",
    "@babel/plugin-proposal-private-methods": "^7.16.0",
    "@babel/plugin-proposal-private-property-in-object": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@expo/next-adapter": "^3.1.7",
    "@next/bundle-analyzer": "^12.0.4",
    "@types/chrome": "^0.0.164",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/prettier": "^2.4.2",
    "@types/react": "^17.0.35",
    "@types/react-native": "^0.66.5",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "copy-webpack-plugin": "^10.0.0",
    "cspell": "^5.13.0",
    "eslint": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "jest": "^27.3.1",
    "jest-sonar-reporter": "^2.0.0",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^9.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4",
    "web-ext": "^6.5.0",
    "webextension-polyfill": "^0.8.0",
    "webpack": "^5.64.2"
  },
  "installConfig": {
    "hoistingLimits": "workspaces",
    "selfReferences": true
  },
  "jest": {
    "testRegex": "((/(tests|__tests__)((/|/[^_.\n][^/\n]*(/[^_.\n][^/\n]+)*/)[^_.\n][^/\n]*))|((/|/.*/)(([^_.\n][^/\n]*.(spec|test))|(spec|test)))).[jt]sx?$",
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/es/",
      "<rootDir>/lib/",
      "<rootDir>/out/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/_setup.ts"
    ]
  },
  "jestSonar": {
    "reportPath": ".mkpm/.tmp/reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
