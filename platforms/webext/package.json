{
  "name": "@multiplatform/webext",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "next lint",
    "start": "next start",
    "webext:build": "rm -rf dist && next export && webpack && cd dist/out && rm -rf _next && (grep -rl '/_next' * | xargs sed -i 's|/_next|/next|g')",
    "webext:dev": "cd dist && web-ext run --verbose --browser-console"
  },
  "dependencies": {
    "-": "*",
    "@babel/runtime": "^7.18.6",
    "@dripsy/core": "^3.6.0",
    "core-js": "^3.23.3",
    "dripsy": "^3.6.0",
    "next": "^12.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "0.68.2",
    "react-native-web": "0.17.7"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@expo/next-adapter": "^4.0.7",
    "@next/bundle-analyzer": "^12.1.6",
    "@types/chrome": "^0.0.191",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/prettier": "^2.6.3",
    "@types/react": "~17.0.47",
    "@types/react-native": "^0.66.19",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "copy-webpack-plugin": "^11.0.0",
    "cspell": "^6.1.3",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.1",
    "jest": "^28.1.2",
    "jest-sonar-reporter": "^2.0.0",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^9.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "web-ext": "^6.7.0",
    "webextension-polyfill": "^0.9.0",
    "webpack": "^5.73.0"
  },
  "installConfig": {
    "hoistingLimits": "none",
    "selfReferences": false
  },
  "jest": {
    "testRegex": "((/(tests|__tests__)((/|/[^_.\n][^/\n]*(/[^_.\n][^/\n]+)*/)[^_.\n][^/\n]*))|((/|/.*/)(([^_.\n][^/\n]*.(spec|test))|(spec|test)))).[jt]sx?$",
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/es/",
      "<rootDir>/lib/",
      "<rootDir>/out/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/_setup.ts"
    ]
  },
  "jestSonar": {
    "reportPath": ".mkpm/.tmp/reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
