{
  "name": "@multiplatform/vscode",
  "displayName": "multiplatform-framework",
  "description": "write once, render anywhere",
  "version": "0.0.1",
  "engines": {
    "vscode": "1.62.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "vscode:compile": "webpack",
    "vscode:lint": "eslint src --ext ts",
    "vscode:package": "webpack --mode production --devtool hidden-source-map",
    "vscode:prepublish": "yarn run package",
    "vscode:pretest": "yarn run compile",
    "vscode:run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "vscode:test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/test/suite/index.js",
    "vscode:watch": "webpack --watch"
  },
  "dependencies": {
    "-": "*",
    "@babel/runtime": "^7.18.6",
    "@dripsy/core": "^3.6.0",
    "core-js": "^3.23.3",
    "dripsy": "^3.6.0",
    "next": "^12.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "0.68.2",
    "react-native-web": "0.17.7",
    "vscode": "^1.1.37"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@expo/next-adapter": "^4.0.7",
    "@next/bundle-analyzer": "^12.1.6",
    "@types/prettier": "^2.6.3",
    "@types/react": "^18.0.14",
    "@types/react-native": "^0.66.19",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-web": "^0.0.24",
    "assert": "^2.0.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "cspell": "^6.1.3",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.1",
    "jest": "^28.1.2",
    "jest-sonar-reporter": "^2.0.0",
    "mocha": "^10.0.0",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^9.0.0",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "installConfig": {
    "hoistingLimits": "none",
    "selfReferences": false
  },
  "jest": {
    "testRegex": "((/(tests|__tests__)((/|/[^_.\n][^/\n]*(/[^_.\n][^/\n]+)*/)[^_.\n][^/\n]*))|((/|/.*/)(([^_.\n][^/\n]*.(spec|test))|(spec|test)))).[jt]sx?$",
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/es/",
      "<rootDir>/lib/",
      "<rootDir>/out/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/_setup.ts"
    ]
  },
  "jestSonar": {
    "reportPath": ".mkpm/.tmp/reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "browser": "./dist/extension.js",
  "activationEvents": [
    "onCommand:multiplatform-framework.helloWorld",
    "onCustomEditor:multiplatform-frameworkEdit.multi"
  ],
  "contributes": {
    "commands": [
      {
        "command": "multiplatform-framework.helloWorld",
        "title": "Hello World"
      }
    ],
    "customEditors": [
      {
        "viewType": "multiplatform-frameworkEdit.multi",
        "displayName": "Multiplatform Framework",
        "selector": [
          {
            "filenamePattern": "**/*.multi"
          }
        ],
        "priority": "default"
      }
    ]
  }
}
